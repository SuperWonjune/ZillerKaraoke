<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context="com.example.user.myapplication.ResultActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/result_relativelayout"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/result_relativelayout"
        android:layout_marginTop="10dp"
        android:src="@drawable/result_home_button"
        android:id="@+id/result_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_home"
        android:layout_centerHorizontal="true"
        android:text="결과"
        android:textSize="40dp"
        android:id="@+id/result_title" />

    <ImageView
        android:id="@+id/result_restart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/result_title"
        android:layout_alignEnd="@+id/result_relativelayout"
        android:layout_alignRight="@+id/result_relativelayout"
        android:src="@drawable/result_restart_button" />

    <RelativeLayout
        android:id="@+id/result_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/result_title"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent_pink"
            android:id="@+id/linearLayout2" />

        <ImageView
            android:id="@+id/result_heart1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:src="@drawable/result_heart" />

        <ImageView
            android:id="@+id/result_heart2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/result_heart1"
            android:layout_toEndOf="@+id/result_heart1"
            android:layout_toRightOf="@+id/result_heart1"
            android:visibility="invisible"
            android:src="@drawable/result_heart" />

        <ImageView
            android:id="@+id/result_heart3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/result_heart2"
            android:layout_toEndOf="@+id/result_heart2"
            android:layout_toRightOf="@+id/result_heart2"
            android:visibility="invisible"
            android:src="@drawable/result_heart" />

        <ImageView
            android:id="@+id/main_plant_dog"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_above="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent_pink"
            android:id="@+id/linearLayout3" />

    </RelativeLayout>



</RelativeLayout>
