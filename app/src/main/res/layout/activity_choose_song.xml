<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/choose_song_listview"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/choose_song_listview"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_button"
        android:id="@+id/choose_song_back_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/choose_song_back_button"
        android:layout_centerHorizontal="true"
        android:text="노래 정하기"
        android:textSize="40dp"
        android:id="@+id/choose_song_title" />

    <ListView
        android:id="@+id/choose_song_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/choose_song_title"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:dividerHeight="4dp"
        android:divider="@color/pink"
        ></ListView>



</RelativeLayout>
